<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>franchu-creations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/creations.css">
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-navbar">
    <div class="container">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
        <div class="mx-auto d-flex">
          <ul class="navbar-nav text-center">
            <li class="nav-item px-3">
              <a class="nav-link fs-4" href="/">Inicio</a>
            </li>
            <li class="nav-item px-3">
              <a class="nav-link fs-4" href="/visitanos">Visítanos</a>
            </li>
            <li class="nav-item px-3">
              <a class="nav-link fs-4" href="/quienesomos">Quiénes somos</a>
            </li>
            <li class="nav-item px-3">
              <a class="nav-link fs-4" href="/contactanos">Contactanos</a>
            </li>
          </ul>

          <!-- Login / Logout -->
          {{#if usuario}}
          <div class="d-flex align-items-center">
            <span class="nombre-usuario me-2">Hola {{usuario}}</span>
            <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión</a>
          </div>
          {{else}}
          <div class="d-flex align-items-center">
            <a href="/admin/login" class="btn btn-outline-light btn-sm me-2">Login</a>
          </div>
          {{/if}}

        </div>
      </div>
    </div>
  </nav>

